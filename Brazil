##Export share of coffee by value

export_coffee_World <- Coffee %>% filter(FlowDesc == "Export", PartnerDesc == "World") %>% pull(PrimaryValue) %>% sum()
import_coffee_World <- Coffee %>% filter(FlowDesc == "Import", PartnerDesc == "World") %>% pull(PrimaryValue) %>% sum()
export_coffee_Brazil <- Coffee %>% filter(ReporterDesc == "Brazil", FlowDesc == "Export", PartnerDesc == "World") %>% pull(PrimaryValue) %>% sum()
marketshare_coffee_Brazil <- export_coffee_Brazil/export_coffee_World

##Market share of Brazil in terms of quantity

export_coffee_World_qty <- Coffee %>% filter(FlowDesc == "Export", PartnerDesc == "World") %>% pull(Qty) %>% sum()
import_coffee_World_qty <- Coffee %>% filter(FlowDesc == "Import", PartnerDesc == "World") %>% pull(Qty) %>% sum()
export_coffee_Brazil_qty <- Coffee %>% filter(ReporterDesc == "Brazil", FlowDesc == "Export", PartnerDesc == "World") %>% pull(Qty) %>% sum()
marketshare_coffee_Brazil_qty <- export_coffee_Brazil_qty/export_coffee_World_qty
share_Brazil_production_export <- export_coffee_Brazil_qty/coffee_production 

##Total export of coffee from Brazil to the European Union including the United Kingdom

import_coffee_EU <- Coffee %>% filter(ReporterDesc == c("European Union", "United Kingdom"), FlowDesc == "Import", PartnerDesc == "World") %>% summarize(import_coffee_EU == sum(PrimaryValue)) 

import_coffee_EU_Brazil <- Coffee %>% filter(ReporterDesc == c("European Union", "United Kingdom"), FlowDesc == "Import", PartnerDesc == "Brazil") %>% summarize(import_coffee_EU == sum(PrimaryValue)) 

marketshare_coffee_brazil_EU <- import_coffee_EU_Brazil$import_coffee_EU/(import_coffee_EU$import_coffee_EU)


2. Soya

Soya <- read.csv("C:/Users/dell/OneDrive - Kansas State University/EUDR/Data/Brazil/Soya.csv")

##Total export of soya in the world

export_soya_World <- Soya %>% filter(ReporterDesc == "World", FlowDesc == "Export", PartnerDesc == "World") %>% summarize(export_soya_World == sum(PrimaryValue)) 

##Total export of soya from Brazil 
export_soya_Brazil <- Soya %>% filter(ReporterDesc == "Brazil", FlowDesc == "Export", PartnerDesc == "World") %>% summarize(export_soya_Brazil == sum(PrimaryValue)) 

##Market share of Brazil in Soya
marketshare_soya_Brazil <- export_soya_Brazil$export_soya_Brazil/(export_soya_World$export_soya_World)

##Total export of soya from Brazil to the European Union including the United Kingdom

import_soya_EU <- Soya %>% filter(ReporterDesc == c("European Union", "United Kingdom"), FlowDesc == "Import", PartnerDesc == "World") %>% summarize(import_soya_EU == sum(PrimaryValue)) 

import_soya_EU_Brazil <- Soya %>% filter(ReporterDesc == c("European Union", "United Kingdom"), FlowDesc == "Import", PartnerDesc == "Brazil") %>% summarize(import_soya_EU == sum(PrimaryValue)) 

marketshare_soya_brazil_EU <- import_soya_EU_Brazil$import_soya_EU/(import_soya_EU$import_soya_EU)

